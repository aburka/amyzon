<div class="c-section">
  <h1 class="c-title c-title--large">Browse All Books</h1>
</div>
<div class="c-section">
  <% @books.each do |book| %>
    <div class="c-card u-margin-bottom-small">
      <div class="c-section">
        <%= image_tag book.cover_image.variant(resize: "200x200"), class: "c-book" %>
        <h4 class="c-title"><%= book.title %></h4>
        <h4 class="c-title c-title--tiny"><%= book.author.name %></h4>
        <p class="c-paragraph">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut...</p>
        <%= link_to "Learn More", book_path(book), class: "c-button c-button--small c-button--focal"%>
      </div>
    </div>
  <% end %>
</div>
